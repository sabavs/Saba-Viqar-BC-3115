class Pet {

	private String animal;
	private String name;
	private int age;
	
// Constructor
	Pet(String animal, String name, int age) {
            setAnimal(animal);
            setName(name);
            setAge(age);
	}
	
// Setters     
      public void setAnimal(String newanimal ){
		this.animal = newanimal;
	}
      
	public void setName(String newname) {
		this.name = newname;
	}

	public void setAge(int newage) {
		this.age = newage;
	}


// Getters
	public String getName() {
		return this.name;
	}

	public String getAnimal() {
		return this.animal;
	}
	
	public int getAge() {
		return this.age;
	}
}




public class Main {

	public static void main(String [] args) {

		Pet dog = new Pet("dog", "Filip", 10);
		Pet cat = new Pet("cat", "Puddin", 3);
		Pet bird = new Pet("bird", "Donut", 5);

		System.out.println("I have a pet " + dog.getAnimal() + " and his name is " + dog.getName() + ". He is " + dog.getAge() + " years old!");
		System.out.println("I have a pet " + cat.getAnimal() + " and her name is " + cat.getName() + ". She is " + cat.getAge() + " years old!");
		System.out.println("I have a pet " + bird.getAnimal() + " and her name is " + bird.getName() + ". She is " + bird.getAge() + " years old!");
	}
}
